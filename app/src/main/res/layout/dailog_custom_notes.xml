<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_horizontal"
                android:textColor="#FFFF"
               android:textStyle="bold"
               android:padding="5dp"
               android:textSize="25sp"
              android:background="@drawable/side_nav_bar"
               android:text="Note Detials"
               />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dg_homework_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Note ID: 6"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_id"
            android:layout_below="@+id/dg_homework_id"
            android:text="Note Title"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dg_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:textSize="17sp"
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_marginTop="0dp"
            android:text="Aron you have to do the math and " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_notice_title"
            android:layout_below="@+id/dg_notice_title"
            android:text="Message"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dg_homework_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:maxLines="5"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="Arron I have provided you some task you need to complete all the task before next holiday. Otherwise I will punish you, remember it." />

        <TextView
            android:id="@+id/dg_homework_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_message"
            android:layout_below="@+id/dg_homework_message"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:text="From: Feroz Ahmed Dar"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dg_homework_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="To: Arraon Mir"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dg_homework_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="Note Date: 29 April 2018"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dg_homework_sending_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:textColor="#000000"
            android:visibility="gone"
            android:text="Sending Date: 27 April 2018 9:00 am"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_message"
            android:layout_below="@+id/dg_homework_message"
            android:text="From"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_from"
            android:layout_below="@+id/dg_homework_from"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="To" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_to"
            android:layout_below="@+id/dg_homework_to"
            android:text="Note Date"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dg_homework_date"
            android:layout_below="@+id/dg_homework_date"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:visibility="gone "
            android:text="Sending Date" />


    </RelativeLayout>

</LinearLayout>